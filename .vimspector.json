{
  "configurations": {
    "cpptools": {
      "adapter": "vscode-cpptools",
      "variables": {
        "BUILDME": {
          "shell": "gcc -o ${workspaceRoot}/a.out -g -O0 -Wall -Werror ${workspaceRoot}/main.c"
        },
        "arch": {
          "shell": "uname -m"
        }
      },
      "configuration": {
        "request": "launch",
        "program": "${workspaceRoot}/a.out",
        "stopAtEntry": true,
        "MIMode": "lldb",
        "MIDebuggerPath": "$HOME/.vim/vimspector-conf/gadgets/macos/vscode-cpptools/debugAdapters/lldb-mi/bin/lldb-mi",
        "logging": {
          "engineLogging": true
        },
        "targetArchitecture": "${arch}"
      }
    }
  }
}
