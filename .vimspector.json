{
  "configurations": {
    "cpptools": {
      "adapter": "vscode-cpptools",
      "variables": {
        "BUILDME": {
          "shell": "gcc -o ${workspaceRoot}/a.out -g -O0 -Wall -Werror ${workspaceRoot}/main.c"
        },
        "arch": {
          "shell": "uname -m"
        }
      },
      "configuration": {
        "request": "launch",
        "program": "${workspaceRoot}/a.out",
        "stopAtEntry": true,
        "MIMode": "lldb",
        "MIDebuggerPath": "$HOME/.vim/vimfiles/bundle/vimspector/gadgets/macos/download/vscode-cpptools/1.17.5/root/extension/debugAdapters/lldb-mi/bin/lldb-mi",
        "logging": {
            "engineLogging": false,
            "programOutput": true,
            "trace": false,
            "traceResponse": false,
            "exceptions": true
        },
        "targetArchitecture": "${arch}"
      }
    }
  }
}
